{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "esteis/multi-client",
            "hostname": "client",
            "memory": 128,
            "essential": false
        },
        {
            "name": "nginx",
            "image": "esteis/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portmappings": [
                {
                    "hostport": 80,
                    "containerport": 80
                }
            ],
            "links": ["client","server"]
        },
        {
            "name": "server",
            "image": "esteis/multi-server",
            "hostname": "api",
            "memory": 128,
            "essential": false
        },
        {
            "name": "worker",
            "image": "esteis/multi-worker",
            "hostname": "worker",
            "memory": 128,
            "essential": false
        }
    ]
}